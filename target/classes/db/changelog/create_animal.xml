<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <!-- Refer to https://docs.liquibase.com/change-types/community/create-table.html -->

    <changeSet id="39726ba4-19c3-4282-8074-d67c5e656e53" author="diego.hidalgo" failOnError="true" >
        <createTable tableName="animal">
            <column name="id" type="UUID" />
            <column name="name" type="varchar(255)">
                <constraints nullable="false" primaryKey="true" />
            </column>
            <column name="male_parent_name" type="varchar(255)" />
            <column name="female_parent_name" type="varchar(255)" />
            <column name="sex" type="char" />
            <column name="weight" type="varchar(255)" />
            <column name="age" type="integer" />
            <column name="height" type="varchar(255)" />
            <column name="arrival_date" type="date" />
        </createTable>
        <addForeignKeyConstraint baseTableName="animal" baseColumnNames="male_parent_name" constraintName="male_fk" referencedTableName="animal"
                                 referencedColumnNames="name" />
        <addForeignKeyConstraint baseTableName="animal" baseColumnNames="female_parent_name" constraintName="female_fk" referencedTableName="animal"
                                 referencedColumnNames="name" />
    <sqlFile path="test_inserts.sql"/>
    </changeSet>

</databaseChangeLog>