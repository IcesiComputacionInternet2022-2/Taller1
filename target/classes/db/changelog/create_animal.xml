<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <!-- Refer to https://docs.liquibase.com/change-types/community/create-table.html -->

    <changeSet id="33d4e9bc-7210-47c3-9617-c56ab7c0750d" author="jose.calderon" failOnError="true">

        <createTable tableName="animal">
            <column name="id" type="UUID">
                <constraints nullable="false" primaryKey="true" />
            </column>
            <column name="name" type="varchar(255)" />
            <column name="gender" type="char" />
            <column name="age" type="int" />
            <column name="weight" type="double" />
            <column name="height" type="double" />
            <column name="arrival_date" type="datetime" />
            <column name="father_id" type="UUID" />
            <column name="mother_id" type="UUID" />
        </createTable>
        <addForeignKeyConstraint baseTableName="animal" baseColumnNames="father_id" constraintName="father_fk" referencedTableName="animal"
                                 referencedColumnNames="id" />
        <addForeignKeyConstraint baseTableName="animal" baseColumnNames="mother_id" constraintName="mother_fk" referencedTableName="animal"
                                 referencedColumnNames="id" />
    </changeSet>
</databaseChangeLog>